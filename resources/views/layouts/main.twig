{% extends "/layouts/base.twig" %}

{% block layout %}
<div class="lg:flex lg:items-start lg:min-h-screen">
  {% include "/sections/aside.twig" %}

  <div class="block lg:hidden">
    <div
      class="w-full mx-auto {{ wide_layout is defined ? 'max-w-6xl' : 'max-w-4xl' }}">
      {% include "/sections/mobile-nav.twig" %}
    </div>
  </div>

  <div
    class="flex flex-col px-2 lg:pt-7 md:min-h-screen grow group-data-[mobile-menu]/html:hidden lg:group-data-[mobile-menu]/html:flex w-full mx-auto {{ wide_layout is defined ? 'max-w-6xl' : 'max-w-4xl' }}">
    <main class="flex flex-col gap-5 grow md:gap-10">
      {% block template %}{% endblock %}
    </main>

    {% block footer %}
    {% include "/sections/footer.twig" %}
    {% endblock %}
  </div>
</div>

{% include "/snippets/workspace/switcher.twig" %}
{% endblock %}

{% block scripts %}
{% if view_namespace in ['app', 'admin'] %}
<script src="assets/{{ view_namespace }}.js?v={{ version }}"></script>
{% endif %}
{% endblock %}